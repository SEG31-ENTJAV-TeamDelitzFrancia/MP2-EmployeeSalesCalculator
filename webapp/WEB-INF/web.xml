<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>MP2-EmployeeSalesCalculator</display-name>
  <welcome-file-list>
    <welcome-file>userinput.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>SalesCalcServlet</servlet-name>
  	<servlet-class>com.entjav.salescalc.controller.SalesCalcServlet</servlet-class>
  	
  	<init-param>
		<param-name>ADDITIONAL_SALES_COMMISSION</param-name>
  		<param-value>0.075</param-value>
  	</init-param>
  
  </servlet>

  <servlet-mapping>
  	<servlet-name>SalesCalcServlet</servlet-name>
  	<url-pattern>/salescalc</url-pattern>
  </servlet-mapping>
  
</web-app>